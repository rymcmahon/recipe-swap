<%= form_for([@recipe, @recipe.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <% if user_signed_in? %>
      <%= f.submit 'Save Comment', :class => 'btn btn-primary'%>
    <% end %>
  </p>
<% end %>