<%= form_for([@recipe, @recipe.comments.build]) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :body, class: "form-control input-lg", placeholder: "Add a comment, #{current_user.first_name}!"%>
    </div>
  </div>
  <p>
    <% if user_signed_in? %>
      <%= f.submit 'Save Comment', :class => 'btn btn-primary'%>
    <% end %>
  </p>
<% end %>
  