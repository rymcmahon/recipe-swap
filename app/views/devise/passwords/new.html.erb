<div class="well bs-component">
<legend>Forgot your password? Enter your email address and we will send you a link to reset it.</legend>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
    	<%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
    	<%= f.submit "Reset Password", class: "btn btn-primary btn-sm" %>
  	</div>
  </div>
	<div class="form-group">
  	<div class="col-sm-offset-4 col-sm-4">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
<% end %>
