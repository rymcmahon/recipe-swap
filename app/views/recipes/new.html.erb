<div class="well bs-component">
  <%= form_for :recipe, :url => recipes_path, :html => { :multipart => true, :class => "form-horizontal", :role => 'form' } do |f| %> 

    <% if @recipe.errors.any? %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <h2>Oops! You forgot to fill in
          <%= pluralize(@recipe.errors.count, "field") %>:
        </h2>
        <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <legend>Add a Recipe</legend>
        <div class="form-group">
          <%= f.label :name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-6">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Upload Image", class: "col-sm-2 control-label" %>
            <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :prep_time, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.text_field :prep_time, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :cooking_time, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.text_field :cook_time, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :ingredients, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.text_area :ingredients, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :cooking_instructions, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.text_area :cooking_instructions, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <% if user_signed_in? %>
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create Recipe", class: "btn btn-primary"%>
          <% end %>
          </div>
        </div>
    </fieldset>
  <% end %>
</div>



