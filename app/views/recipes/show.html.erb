<p>
  <strong>Title:</strong>
  <%= @recipe.name %>
</p>
 
<p>
  <strong>Summary:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Prep Time:</strong>
  <%= @recipe.prep_time %>
</p>

<p>
  <strong>Cook Time:</strong>
  <%= @recipe.cook_time %>
</p>

<p>
  <strong>Ingredients:</strong>
  <ul>
    <%  @ingredients_array.each do |ingredient| %>
      <li><%= ingredient %> </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Instructions:</strong>
  <ol>
    <%  @cooking_instructions_array.each do |instruction| %>
      <li><%= instruction %> </li>
    <% end %>
  </ol>
</p>

<h2>Comments</h2>
<% @recipe.comments.each do |comment| %>
  <p>
    <strong>Name:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@recipe, @recipe.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, "Name" %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Add Comment', :class => 'btn btn-success' %>
  </p>
<% end %>

